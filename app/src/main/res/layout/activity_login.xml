<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/qci_logo"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginTop="40dp">


        <com.qci.onsite.view.CustomEditText
            android:id="@+id/login_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_color"
            android:hint="@string/username"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:drawableLeft="@mipmap/email"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/white" />

        <com.qci.onsite.view.CustomEditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_color"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:padding="5dp"
            android:imeOptions="actionDone"
            android:drawableLeft="@mipmap/lock"
            android:drawablePadding="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/white" />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/login_btn"
            android:layout_marginTop="50dp"
            android:text="LOGIN" />

    </LinearLayout>

    <TextView android:id="@+id/tv_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text=""/>

</LinearLayout>
